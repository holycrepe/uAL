<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:wUAL;assembly=wUAL"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <LinearGradientBrush x:Key="TabHeaderButtonBackground" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="1" Color="#FF1971C9" />
        <GradientStop Color="#FF051F38" />
    </LinearGradientBrush>
    <Style x:Key="TabHeaderButtonStyle"
           BasedOn="{StaticResource RadButtonStyle}"
           TargetType="telerik:RadButton">
        <Setter Property="Background" Value="{StaticResource TabHeaderButtonBackground}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Margin" Value="5,0,0,5" />
    </Style>
    <Style x:Key="TabHeaderLabelStyle"
           BasedOn="{StaticResource LabelStyle}"
           TargetType="telerik:Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Background" Value="#FF004080" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
</ResourceDictionary>