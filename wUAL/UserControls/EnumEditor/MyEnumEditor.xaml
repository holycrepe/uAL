<UserControl x:Class="wUAL.UserControls.MyEnumEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bind="clr-namespace:wUAL.Properties.Settings.Binding"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:my="clr-namespace:wUAL"
             xmlns:myControl="clr-namespace:wUAL.UserControls"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             x:Name="myEnumEditor"
             Grid.Column="1"
             d:DesignHeight="50"
             d:DesignWidth="300"
             mc:Ignorable="d">
  <telerik:FlagEnumEditor 
    x:Name="RadFlagEnumEditor"
    DataContext="{Binding Path=DataContext, ElementName=myEnumEditor}"
    EnumType="{Binding Type}"
    Value="{Binding Enum}" />
</UserControl>