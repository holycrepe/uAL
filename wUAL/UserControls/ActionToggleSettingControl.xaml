<UserControl x:Class="wUAL.UserControls.ActionToggleSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:wUAL"
             xmlns:bind="clr-namespace:wUAL.Properties.Settings.Binding"
             xmlns:local="clr-namespace:wUAL.UserControls"             
             mc:Ignorable="d" 
             Grid.Column="1"
             d:DataContext="{bind:Toggle Monitors}"
             d:DesignHeight="50" d:DesignWidth="300">
    <UniformGrid
		Columns="3"
        DataContext="{Binding DataContext.Settings, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ActionToggleSettingControl}}}">
        <CheckBox
			IsChecked="{Binding All}"
			Content="All" />
        <CheckBox
			IsChecked="{Binding Torrents}"
			Content="Torrents"
			IsEnabled="{Binding All, Converter={my:InverseConverter}, Mode=OneWay}" />
        <CheckBox
			IsChecked="{Binding Metalinks}"
			Content="Metalinks"
			IsEnabled="{Binding All, Converter={my:InverseConverter}, Mode=OneWay}" />
    </UniformGrid>

</UserControl>
