<UserControl x:Class="wUAL.UserControls.QueueGridHeaderControl"
	        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:my="clr-namespace:wUAL" 
            mc:Ignorable="d"
            x:Name="queueGridHeaderControlParent">
    <StackPanel Orientation="Horizontal" DataContext="{Binding ElementName=queueGridHeaderControlParent}">
        <Image
				Source="{Binding QueueIcon}"
				Margin="0,0,5,0"
				Width="32" />
        <TextBlock
				Text="{Binding QueueLabel}"
                Visibility="{Binding QueueLabel, Converter={my:VisibilityConverter}}"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="#FF2A75CF"/>
    </StackPanel>
</UserControl>