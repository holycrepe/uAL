                <Setter Property="Foreground" Value="{Binding Models[Resuming].Fill, Source={StaticResource ProgressBarModels}}" />
                <Setter Property="Effect" Value="{StaticResource glowEffect5}" />
            </Style>
            <Style x:Key="TestOutlinedTextBlockStyle5"
