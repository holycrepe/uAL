                <Setter Property="Stroke" Value="{Binding Models[Resuming].StrokeGradient, Source={StaticResource ProgressBarModels}}" />
                <Setter Property="Fill" Value="{Binding Models[Resuming].Fill, Source={StaticResource ProgressBarModels}}" />
            </Style>
            <Style x:Key="TestMyProgressBarStyle5"
                   BasedOn="{StaticResource TestMyProgressBarStyle}"
                   TargetType="userControls:MyProgressBar">
                <Setter Property="Stroke" Value="{Binding Models[Resuming].StrokeGradient, Source={StaticResource ProgressBarModels}}" />
                <Setter Property="Fill" Value="{Binding Models[Resuming].Fill, Source={StaticResource ProgressBarModels}}" />
            </Style>


            <!--  =======================  PARTIAL  ==========================  -->
            <DropShadowEffect x:Key="glowEffect6"
                              BlurRadius="5"
                              Opacity="1"
                              ShadowDepth="0"
                              Color="{Binding Models[Partial].Stroke,
                                              Source={StaticResource ProgressBarModels}}" />
            <DropShadowEffect x:Key="glowEffectOuter6"
                              BlurRadius="5"
