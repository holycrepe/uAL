            <!--  =======================  Default  ==========================  -->

            <Grid Style="{StaticResource TestGridStyle}">
                <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle2}" />
                <telerik:Label Style="{StaticResource TestLabelStyle2}" />
            </Grid>

            <Grid Style="{StaticResource TestGridStyle}">
                <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle2}" />
                <Grid Effect="{StaticResource glowEffect2}">
                    <Grid Effect="{StaticResource glowEffect2}">
                        <telerik:Label Style="{StaticResource TestLabelStyle2}" />
                    </Grid>
                </Grid>
            </Grid>

            <Grid Style="{StaticResource TestGridStyle}">
                <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle2}" />
                <userControls:OutlinedTextBlock Style="{StaticResource TestOutlinedTextBlockStyle2}" />
            </Grid>


            <!--  =======================  Active  ==========================  -->

            <telerik:Label Content="Active:" Style="{StaticResource TestHeadingLabelStyle}" />

            <StackPanel>
                <UniformGrid Columns="2">
                <StackPanel Style="{StaticResource TestStackPanelLeftStyle}">
                    <telerik:Label Content="Label:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <telerik:Label Style="{StaticResource TestLabelStyle3}" />
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <telerik:Label Effect="{StaticResource glowEffectOuter3}" Style="{StaticResource TestLabelStyle3}" />
                    </Grid>
                </StackPanel>

                <StackPanel>
                    <telerik:Label Content="Label With OuterGlow:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <Grid Effect="{StaticResource glowEffectOuter3}">
                            <Grid Effect="{StaticResource glowEffectOuter3}">
                                <telerik:Label Style="{StaticResource TestLabelStyle3}" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <Grid Effect="{StaticResource glowEffectOuter3}">
                            <Grid Effect="{StaticResource glowEffectOuter3}">
                                <telerik:Label Effect="{StaticResource glowEffectOuter3}" Style="{StaticResource TestLabelStyle3}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </StackPanel>
                    <StackPanel Style="{StaticResource TestStackPanelLeftStyle}">
                    <telerik:Label Content="Outlined Text Block:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <userControls:OutlinedTextBlock Style="{StaticResource TestOutlinedTextBlockStyle3}" />
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <userControls:OutlinedTextBlock Effect="{StaticResource glowEffectOuter3}" Style="{StaticResource TestOutlinedTextBlockStyle3}" />
                    </Grid>
                </StackPanel>

                <StackPanel>
                    <telerik:Label Content="Outlined Text Block With OuterGlow:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <Grid Effect="{StaticResource glowEffectOuter3}">
                            <Grid Effect="{StaticResource glowEffectOuter3}">
                                <userControls:OutlinedTextBlock Style="{StaticResource TestOutlinedTextBlockStyle3}" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle3}" />
                        <Grid Effect="{StaticResource glowEffectOuter3}">
                            <Grid Effect="{StaticResource glowEffectOuter3}">
                                <userControls:OutlinedTextBlock Effect="{StaticResource glowEffectOuter3}" Style="{StaticResource TestOutlinedTextBlockStyle3}" />
                            </Grid>
                        </Grid>
                    </Grid>
                    </StackPanel>
                </UniformGrid>
                <UniformGrid Columns="2">
                <StackPanel Style="{StaticResource TestStackPanelLeftStyle}">
                    <telerik:Label Content="Glowing Text Block:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <userControls:MyProgressBar EffectDepth="OuterBorder" Style="{StaticResource TestMyProgressBarStyle3}" />
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <userControls:MyProgressBar EffectDepth="InnerBorder" Style="{StaticResource TestMyProgressBarStyle3}" />
                    </Grid>
                </StackPanel>

                <StackPanel>
                    <telerik:Label Content="Glowing Text Block With OuterGlow:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <userControls:MyProgressBar EffectDepth="Element" Style="{StaticResource TestMyProgressBarStyle3}" />
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <userControls:MyProgressBar EffectDepth="OuterBorder" Style="{StaticResource TestMyProgressBarStyle3}" />
                    </Grid>
                </StackPanel>
                </UniformGrid>
            </StackPanel>
            <StackPanel />



            <!--  =======================  Pending  ==========================  -->

            <telerik:Label Content="Pending:" Style="{StaticResource TestHeadingLabelStyle}" />

            <UniformGrid Columns="2">
                <StackPanel Style="{StaticResource TestStackPanelLeftStyle}">
                    <telerik:Label Content="Label:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle4}" />
                        <telerik:Label Style="{StaticResource TestLabelStyle4}" />
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle4}" />
                        <telerik:Label Effect="{StaticResource glowEffectOuter4}" Style="{StaticResource TestLabelStyle4}" />
