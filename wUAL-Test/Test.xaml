                <Setter Property="Stroke" Value="{Binding Models[Partial].StrokeGradient, Source={StaticResource ProgressBarModels}}" />
                <Setter Property="Fill" Value="{Binding Models[Partial].Fill, Source={StaticResource ProgressBarModels}}" />
            </Style>
            <Style x:Key="TestMyProgressBarStyle6"
                   BasedOn="{StaticResource TestMyProgressBarStyle}"
                   TargetType="userControls:MyProgressBar">
                <Setter Property="Stroke" Value="{Binding Models[Partial].StrokeGradient, Source={StaticResource ProgressBarModels}}" />
                <Setter Property="Fill" Value="{Binding Models[Partial].Fill, Source={StaticResource ProgressBarModels}}" />
            </Style>




            <!--  =======================  GRIDS  ==========================  -->

            <Style x:Key="TestGridStyle" TargetType="Grid" />

            <Style x:Key="TestProgressBarStyle2"
                   BasedOn="{StaticResource TestProgressBarStyle}"
                   TargetType="telerik:RadProgressBar">
                <Setter Property="Foreground" Value="{Binding Models[Default].Foreground, Source={StaticResource ProgressBarModels}}" />
            </Style>
            <Style x:Key="TestProgressBarStyle3"
                   BasedOn="{StaticResource TestProgressBarStyle}"
                   TargetType="telerik:RadProgressBar">
                <Setter Property="Foreground" Value="{Binding Models[Active].Foreground, Source={StaticResource ProgressBarModels}}" />
            </Style>
            <Style x:Key="TestProgressBarStyle4"
                   BasedOn="{StaticResource TestProgressBarStyle}"
                   TargetType="telerik:RadProgressBar">
                <Setter Property="Foreground" Value="{Binding Models[Pending].Foreground, Source={StaticResource ProgressBarModels}}" />
            </Style>
            <Style x:Key="TestProgressBarStyle5"
                   BasedOn="{StaticResource TestProgressBarStyle}"
                   TargetType="telerik:RadProgressBar">
                <Setter Property="Foreground" Value="{Binding Models[Resuming].Foreground, Source={StaticResource ProgressBarModels}}" />
            </Style>
            <Style x:Key="TestProgressBarStyle6"
                   BasedOn="{StaticResource TestProgressBarStyle}"
                   TargetType="telerik:RadProgressBar">
                <Setter Property="Foreground" Value="{Binding Models[Partial].Foreground, Source={StaticResource ProgressBarModels}}" />
            </Style>
