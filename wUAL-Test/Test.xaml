                        <Grid Effect="{StaticResource glowEffectOuter4}">
                            <Grid Effect="{StaticResource glowEffectOuter4}">
                                <telerik:Label Effect="{StaticResource glowEffectOuter4}" Style="{StaticResource TestLabelStyle4}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </StackPanel>
                <StackPanel Style="{StaticResource TestStackPanelLeftStyle}">
                    <telerik:Label Content="Outlined Text Block:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle4}" />
                        <userControls:OutlinedTextBlock Style="{StaticResource TestOutlinedTextBlockStyle4}" />
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle4}" />
                        <userControls:OutlinedTextBlock Effect="{StaticResource glowEffectOuter4}" Style="{StaticResource TestOutlinedTextBlockStyle4}" />
                    </Grid>
                </StackPanel>

                <StackPanel>
                    <telerik:Label Content="Outlined Text Block With OuterGlow:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle4}" />
                        <Grid Effect="{StaticResource glowEffectOuter4}">
                            <Grid Effect="{StaticResource glowEffectOuter4}">
                                <userControls:OutlinedTextBlock Style="{StaticResource TestOutlinedTextBlockStyle4}" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle4}" />
                        <Grid Effect="{StaticResource glowEffectOuter4}">
                            <Grid Effect="{StaticResource glowEffectOuter4}">
                                <userControls:OutlinedTextBlock Effect="{StaticResource glowEffectOuter4}" Style="{StaticResource TestOutlinedTextBlockStyle4}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </StackPanel>
            </UniformGrid>
            <StackPanel />


            <!--  =======================  Resuming  ==========================  -->

            <telerik:Label Content="Resuming:" Style="{StaticResource TestHeadingLabelStyle}" />

            <UniformGrid Columns="2">
                <StackPanel Style="{StaticResource TestStackPanelLeftStyle}">
                    <telerik:Label Content="Label:" Style="{StaticResource TestSubHeadingLabelStyle}" />
                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle5}" />
                        <telerik:Label Style="{StaticResource TestLabelStyle5}" />
                    </Grid>

                    <Grid Style="{StaticResource TestGridStyle}">
                        <telerik:RadProgressBar Style="{StaticResource TestProgressBarStyle5}" />
                        <telerik:Label Effect="{StaticResource glowEffectOuter5}" Style="{StaticResource TestLabelStyle5}" />
                    </Grid>
                </StackPanel>

                <StackPanel>
